<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/opensans</item>
    </style>

    <style name="ToolBarTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColorSecondary">@color/app_primary_color</item>
        <item name="android:tint">@color/app_primary_color</item>
        <item name="iconTint">@color/app_primary_color</item>
    </style>

    <style name="BottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/sheet_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/sheet_slide_out_bottom</item>
    </style>

</resources>