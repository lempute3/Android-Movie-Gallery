<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <FrameLayout
        android:id="@+id/h_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="home"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/viewItemBackgroundColor"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/h_category_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tag="category_recycler_view"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/h_movie_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tag="movie_list_recycler_view"
                />

        </LinearLayout>

    </FrameLayout>

